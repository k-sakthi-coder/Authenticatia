<html>
  <head>
      <title>Sign Up | Page</title>
      <meta name="viewport" content="width=device-width, initial-scale=1">
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.css">
      <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js"></script>
      <link href="https://getbootstrap.com/docs/5.3/assets/css/docs.css" rel="stylesheet">
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
      <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js" integrity="sha512-lOrm9FgT1LKOJRUXF3tp6QaMorJftUjowOWiDcG5GFZ/q7ukof19V0HKx/GWzXCdt9zYju3/KhBNdCLzK8b90Q==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
      <style>
        button{
          transition: all .3s ease-in-out;
        }
        button:hover{
          box-shadow: black 0px 0px 20px;
          transform: scale(0.9);
        }
      </style>
  </head>
  <body>
      <section style="background-color: lightcyan;">
        <div class="mask d-flex align-items-center h-100" >
          <div class="container" >
            <div class="row d-flex justify-content-center align-items-center h-100" >
              <div class="col-12 col-md-9 col-lg-7 col-xl-6" >
                <div class="" style="border-radius: 15px;" >
                  <div class="p-3">
                    <h2 class="text-uppercase text-center mb-5">Create an account</h2>
                    <form action="/user/create" method="POST">
                      <!-- User name -->
                      <div class="form-outline mb-4">
                        <input type="text" id="form3Example1cg" name="name"class="form-control form-control-lg" required/>
                        <label class="form-label" for="form3Example1cg">Your Name</label>
                      </div>
                      <!-- Email -->
                      <div class="form-outline mb-4">
                        <input type="email" id="form3Example3cg" name="email" class="form-control form-control-lg" required/>
                        <label class="form-label" for="form3Example3cg">Your Email</label>
                      </div>
                      <!-- password -->
                      <div class="form-outline mb-4">
                        <input type="password" id="form3Example4cg" name="password" class="form-control form-control-lg" required/>
                        <label class="form-label" for="form3Example4cg">Password</label>
                      </div>
                      <!-- Repeat password -->
                      <div class="form-outline mb-4">
                        <input type="password" id="form3Example4cdg" name="confirm_password" class="form-control form-control-lg" required />
                        <label class="form-label" for="form3Example4cdg">Repeat your password</label>
                      </div>

                      <div class="d-flex justify-content-center">
                        <button type="submit" role="button"
                          class="btn bg-warning btn-block btn-lg text-body">Register</button>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
      <!-- Noty js notification -->
      <script type="">
        <%if (flash.success && flash.success.length > 0 ){%>
            new Noty({
              theme:"relax",
              text: '<%= flash.success %>',
              type:"error",
              layout:"topRight",
              timeout:1500
            }).show();
        <%}%>
      </script>
  </body>
</html>